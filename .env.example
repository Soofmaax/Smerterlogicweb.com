# Analytics provider (plausible | umami | ga)
NEXT_PUBLIC_ANALYTICS_PROVIDER=plausible

# Plausible
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=smarterlogicweb.com

# Umami (optional)
NEXT_PUBLIC_UMAMI_SRC=https://analytics.umami.is/script.js
NEXT_PUBLIC_UMAMI_WEBSITE_ID=

# Google Analytics 4 (optional — requires consent via cookie banner)
# Example: NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GA_ID=

# Google Places API (server-side)
GOOGLE_PLACES_API_KEY=
GOOGLE_PLACE_ID=

# Booking link (Calendly or Cal.com)
# Example: https://cal.com/your-handle/15min
NEXT_PUBLIC_BOOKING_URL=

# Public phone number (used for tel: links in CTAs)
# Example: +33612345678
NEXT_PUBLIC_PHONE=

# WhatsApp Business link
# Example: https://wa.me/33612345678
NEXT_PUBLIC_WHATSAPP_URL=

# Exit-intent guide PDF (public URL). If not set, a dummy PDF will be used.
NEXT_PUBLIC_GUIDE_PDF_URL=

# Optional: webhook to collect subscriptions (Zapier/Make/etc.)
SUBSCRIBE_WEBHOOK=

# Optional: ephemeral local fallback (/tmp) in serverless (not persistent)
SUBSCRIBE_LOCAL_FALLBACK=0

# Demo images for "Votre Site Travaille Pour Vous"
# Comma-separated absolute URLs (Pexels recommended). Example:
# https://images.pexels.com/photos/3184452/pexels-photo-3184452.jpeg?auto=compress&cs=tinysrgb&w=800&h=200&fit=crop, https://images.pexels.com/photos/3184453/pexels-photo-3184453.jpeg?auto=compress&cs=tinysrgb&w=800&h=200&fit=crop, https://images.pexels.com/photos/3184454/pexels-photo-3184454.jpeg?auto=compress&cs=tinysrgb&w=800&h=200&fit=crop, https://images.pexels.com/photos/3184455/pexels-photo-3184455.jpeg?auto=compress&cs=tinysrgb&w=800&h=200&fit=crop
NEXT_PUBLIC_DEMO_IMAGES=

# Security: enable code snippet API only when explicitly needed in prod
# 0 (default) disables in production, 1 enables
CODE_SNIPPETS_ENABLED=0

# Supabase (BaaS) — server-side insertion of leads (optional)
# WARNING: service_role is secret — set only on the server (Netlify environment), never expose to client.
SUPABASE_URL=
SUPABASE_SERVICE_ROLE=
# Optional (client reads): not used currently
SUPABASE_ANON_KEY=

# Blog scheduling (optional)
# Set the start date (YYYY-MM-DD or ISO) for automatic Mon/Wed/Fri publication slots.
# Example: BLOG_SCHEDULE_START_FR=2025-11-10 (first slot will be Mon 2025-11-10 at BLOG_PUBLISH_HOUR)
BLOG_SCHEDULE_START_FR=
BLOG_SCHEDULE_START_EN=
# Hour (0-23) at which posts are considered published on that day. Default: 9
BLOG_PUBLISH_HOUR=9
# Initial burst: number of posts to publish immediately (without waiting for schedule)
BLOG_INITIAL_PUBLISH_COUNT_FR=10
BLOG_INITIAL_PUBLISH_COUNT_EN=10

# Base site URL (used in emails to generate absolute links)
# Example: https://smarterlogicweb.com
NEXT_PUBLIC_SITE_URL=https://smarterlogicweb.com

# Booking Link (Cal.com/Calendly/Google Forms)
NEXT_PUBLIC_BOOKING_URL=

# Blog scheduling (FR/EN)
# Start date for scheduling (set to a past date to backdate publications)
# FR: start on Monday 2025-10-20 at BLOG_PUBLISH_HOUR
BLOG_SCHEDULE_START_FR=2025-10-20
BLOG_SCHEDULE_START_EN=

# Hour of publication (0–23)
BLOG_PUBLISH_HOUR=9

# Initial burst: publish the first N posts immediately
# FR: 0 to avoid immediate publication before schedule starts
BLOG_INITIAL_PUBLISH_COUNT_FR=0
BLOG_INITIAL_PUBLISH_COUNT_EN=5

# Force publish overrides (comma-separated slugs) regardless of schedule
BLOG_PUBLISH_OVERRIDE_FR=
BLOG_PUBLISH_OVERRIDE_EN=

# Email sending (Resend) for gated PDF delivery
# https://resend.com/
RESEND_API_KEY=
# From address (must be a verified domain/sender on Resend)
# Example: SmarterLogicWeb <contact@smarterlogicweb.com>
RESEND_FROM=

# Optional: override brand font URLs for PDFs (TTF)
# Defaults will fetch from google/fonts repo if unset
PDF_FONT_INTER_REGULAR_URL=
PDF_FONT_INTER_BOLD_URL=
PDF_FONT_DMSANS_REGULAR_URL=
PDF_FONT_DMSANS_BOLD_URL=

# Analytics (optional — GA4 with consent)
# To enable Google Analytics, set NEXT_PUBLIC_ANALYTICS_PROVIDER=ga and provide GA4 ID:
NEXT_PUBLIC_GA_ID=
# Optional: Google Tag Manager container ID (for marketing tags, gated by consent)
NEXT_PUBLIC_GTM_ID=
